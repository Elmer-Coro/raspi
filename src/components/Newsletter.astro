<section class="bg-white px-6 py-16">
  <div class="max-w-3xl mx-auto text-center">
    <!-- Título -->
    <h2 class="text-3xl md:text-4xl font-bold mb-4">
      ¡Únete a nuestra comunidad!
    </h2>

    <!-- Descripción -->
    <p class="text-gray-700 mb-6">
      Suscríbete para recibir novedades y ofertas exclusivas de nuestros
      detalles únicos y personalizados.
    </p>

    <!-- Formulario -->
    <form class="flex flex-col sm:flex-row items-center justify-center gap-3">
      <input
        type="email"
        placeholder="Ingresa tu correo"
        class="border border-black px-4 py-2 w-full sm:w-auto min-w-[250px] outline-none"
        required
      />
      <button
        type="submit"
        class="bg-black text-white px-5 py-2 hover:bg-gray-800 transition"
      >
        Suscribirse
      </button>
    </form>

    <!-- Aviso legal -->
    <p class="text-xs text-gray-600 mt-4">
      Al hacer clic en Suscribirse, aceptas nuestros <a
        href="#"
        class="underline"
        >Términos y Condiciones</a
      >.
    </p>
  </div>
</section>
