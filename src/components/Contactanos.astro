<section class="px-4 py-16 bg-white md:px-20">
  <div
    class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-10 items-start"
  >
    <!-- Info de contacto -->
    <div class="space-y-6">
      <p class="text-sm text-gray-600">Contacto</p>
      <h2 class="text-3xl font-bold">Contáctanos</h2>
      <p class="text-gray-600">Estamos aquí para ayudarte con tus consultas.</p>

      <!-- Correo -->
      <div class="flex items-start space-x-4">
        <div class="mt-1 text-xl">✉️</div>
        <div>
          <h3 class="font-semibold">Correo</h3>
          <p class="text-sm text-gray-600">Escríbenos a</p>
          <a
            href="mailto:raspidetalles@gmail.com"
            class="text-blue-600 underline"
            >raspidetalles@gmail.com</a
          >
        </div>
      </div>

      <!-- Teléfono -->
      <div class="flex items-start space-x-4">
        <div class="mt-1 text-xl">📞</div>
        <div>
          <h3 class="font-semibold">Teléfono</h3>
          <p class="text-sm text-gray-600">Llámanos al</p>
          <a
            href="tel:+1555000000"
            class="text-blue-600 underline"
            >+1 (555) 000-0000</a
          >
        </div>
      </div>

      <!-- Dirección -->
      <div class="flex items-start space-x-4">
        <div class="mt-1 text-xl">📍</div>
        <div>
          <h3 class="font-semibold">Dirección</h3>
          <p class="text-sm text-gray-600">
            123 Calle Ejemplo, Ciudad, País 2000
          </p>
          <a
            href="#"
            class="text-sm text-gray-700 underline flex items-center gap-1"
            >Obtener Direcciones ➔</a
          >
        </div>
      </div>
    </div>

    <!-- Mapa o Imagen de relleno -->
    <div class="bg-gray-300 w-full h-96 flex items-center justify-center">
      <div class="text-gray-600 text-sm">[ Imagen / Mapa ]</div>
    </div>
  </div>
</section>
