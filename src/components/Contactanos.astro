<section class="px-4 py-16 bg-white md:px-20">
  <div
    class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-10 items-start"
  >
    <!-- Info de contacto -->
    <div class="space-y-6">
      <p class="text-sm text-gray-600">Contacto</p>
      <h2 class="text-3xl font-bold">Contáctanos</h2>
      <p class="text-gray-600">Estamos aquí para ayudarte con tus consultas.</p>

      <!-- Correo -->
      <div class="flex items-start space-x-4">
        <div class="mt-1 text-xl">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-mail"
            ><path
              stroke="none"
              d="M0 0h24v24H0z"
              fill="none"
            ></path><path
              d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"
            ></path><path d="M3 7l9 6l9 -6"></path></svg
          >
        </div>
        <div>
          <h3 class="font-semibold">Correo</h3>
          <p class="text-sm text-gray-600">Escríbenos a</p>
          <a
            href="mailto:raspidetalles@gmail.com"
            class="text-blue-600 underline"
            >raspidetalles@gmail.com</a
          >
        </div>
      </div>

      <!-- Teléfono -->
      <div class="flex items-start space-x-4">
        <div class="mt-1 text-xl">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-phone"
            ><path
              stroke="none"
              d="M0 0h24v24H0z"
              fill="none"
            ></path><path
              d="M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2"
            ></path></svg
          >
        </div>
        <div>
          <h3 class="font-semibold">Teléfono</h3>
          <p class="text-sm text-gray-600">Llámanos al</p>
          <a
            href="tel:+1555000000"
            class="text-blue-600 underline"
            >+1 (555) 000-0000</a
          >
        </div>
      </div>

      <!-- Dirección -->
      <div class="flex items-start space-x-4">
        <div class="mt-1 text-xl">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-map-pins"
            ><path
              stroke="none"
              d="M0 0h24v24H0z"
              fill="none"
            ></path><path
              d="M10.828 9.828a4 4 0 1 0 -5.656 0l2.828 2.829l2.828 -2.829z"
            ></path><path d="M8 7l0 .01"></path><path
              d="M18.828 17.828a4 4 0 1 0 -5.656 0l2.828 2.829l2.828 -2.829z"
            ></path><path d="M16 15l0 .01"></path></svg
          >
        </div>
        <div>
          <h3 class="font-semibold">Dirección</h3>
          <p class="text-sm text-gray-600">
            123 Calle Ejemplo, Ciudad, País 2000
          </p>
        </div>
      </div>
    </div>

    <!-- Mapa o Imagen de relleno -->
    <div class="bg-gray-300 w-full h-96 flex items-center justify-center">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d31788.120972243036!2d-80.69976979393742!3d-5.181380399999998!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x904a1b1fee75c035%3A0xcc1e3585b3dfc196!2sMunicipalidad%20Distrital%20de%20Veintis%C3%A9is%20de%20Octubre!5e0!3m2!1ses-419!2spe!4v1749099157300!5m2!1ses-419!2spe"
        width="100%"
        height="100%"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      ></iframe>
    </div>
  </div>
</section>
